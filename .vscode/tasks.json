{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				""
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Task generated by Debugger."
		},
		{
			"label": "make: build all",
			"type": "shell",
			"command": "bash",
			"args": [
				"-lc",
				"make clean && make"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "smoke: run restauracja (3s)",
			"type": "shell",
			"command": "bash",
			"args": [
				"-lc",
				"timeout 3s ./build/bin/restauracja"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "make: rebuild all (clean)",
			"type": "shell",
			"command": "bash",
			"args": [
				"-lc",
				"make clean && make"
			],
			"isBackground": false,
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "smoke: run restauracja (3s)",
			"type": "shell",
			"command": "bash",
			"args": [
				"-lc",
				"timeout 3s ./build/bin/restauracja"
			],
			"isBackground": false,
			"problemMatcher": []
		}
	],
	"version": "2.0.0"
}